<AnchorPane fx:id="mainanchoe" maxHeight="500.0" maxWidth="1000.0" minHeight="500.0" minWidth="720.0" prefHeight="500.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.zoo.app.controller.MainController">
   <children>
      <AnchorPane fx:id="anchor1" prefHeight="500.0" prefWidth="500.0" stylesheets="@../Background.css">
         <children>
            <ImageView fitHeight="500.0" fitWidth="500.0" pickOnBounds="true" preserveRatio="true">
               <image>
<!--                  <Image url="@../images/prince-david-454229-unsplash.jpg" />-->
                   <Image url="@../resources/images/prince-david-454229-unsplash.jpg" />
               </image>
            </ImageView>
            <Label layoutX="73.0" layoutY="49.0" prefHeight="39.0" prefWidth="354.0" text="Welcome to MeysamTN ZOO" textFill="WHITE">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <Button fx:id="btn_register" blendMode="GREEN" layoutX="156.0" layoutY="118.0" mnemonicParsing="false" onAction="#registerForm" prefHeight="0.0" prefWidth="189.0" style="-fx-border-color: #FFFFFF; -fx-background-color: transparent; -fx-border-radius: 17;" text="Register" textFill="WHITE" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="anchor2" layoutX="500.0" prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: #202B25;">
         <children>
            <TextField fx:id="tf_username" layoutX="155.0" layoutY="155.0" prefHeight="0.0" prefWidth="189.0" promptText=" username" style="-fx-border-color: #FFFFFF; -fx-background-color: transparent; -fx-border-radius: 17;">
               <effect>
                  <Blend />
               </effect>
            </TextField>
            <PasswordField fx:id="pf_password" layoutX="155.0" layoutY="196.0" prefHeight="0.0" prefWidth="189.0" promptText=" password" style="-fx-border-color: #FFFFFF; -fx-background-color: transparent; -fx-border-radius: 17;" />
            <Button fx:id="btn_login" blendMode="GREEN" layoutX="155.0" layoutY="270.0" mnemonicParsing="false" onAction="#loginChecker" prefHeight="0.0" prefWidth="189.0" style="-fx-border-color: #FFFFFF; -fx-background-color: transparent; -fx-border-radius: 17;" text="Enter" textFill="WHITE" />
            <Label layoutX="202.0" layoutY="49.0" prefHeight="39.0" prefWidth="98.0" text="Sign in :" textFill="WHITE">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
            <Button fx:id="btn_forgot" layoutX="156.0" layoutY="315.0" mnemonicParsing="false" onAction="#PassChangeForm" prefHeight="0.0" prefWidth="189.0" style="-fx-background-color: transparent;" text="forgotten password ?" textFill="WHITE" />
            <Label fx:id="lbl_status" layoutX="161.0" layoutY="408.0" prefHeight="39.0" prefWidth="178.0" textFill="WHITE">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <ImageView fx:id="iv_status" fitHeight="39.0" fitWidth="36.0" layoutX="232.0" layoutY="447.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="lbl_time" layoutX="14.0" layoutY="447.0" prefHeight="39.0" prefWidth="116.0" text="Time" textFill="WHITE">
               <font>
                  <Font size="27.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
